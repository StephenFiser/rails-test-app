<% provide(:title, 'Sign Up') %>
<h1>Sign Up</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%=f.text_field :name, id: "Name", placeholder: "Name" %>
			<%=f.text_field :email, id: "Email", placeholder: "Email" %>
			<%=f.password_field :password, id: "Password", placeholder: "Password" %>
			<%=f.password_field :password_confirmation, id: "Confirmation", placeholder: "Password Confirmation" %>
			<%=f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
